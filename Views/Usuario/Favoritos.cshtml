    <div id="popup" class="overlay">
        <div id="popupBody">
            <h2>Subir Canción a Beamy Music</h2>
            <a id="cerrar" href="#">&times;</a>
            <div class="popupContent">

                <div class="container">
                    <div class="row">

                        <div class="col-lg-4">
                            <div class="text-lef">
                                <form action="/usuario/interface" enctype="multipart/form-data" method="post">
                                    <label>Subir Canción</label>
                                    <input type="file" name="Cancion" />
                                    <label>Subir Foto</label>
                                    <input type="file" name="Foto" />
                                    <label>Nombre</label>
                                    <input class="form-control" name="Nombre" autocomplete="off" placeholder="Ingrese nombre de la canción" minlength="3" />

                                    <br />
                                    <label>Género</label>
                                    <input class="form-control" name="Genero" autocomplete="off" placeholder="Ingrese Género de la canción" minlength="3" />

                                    <br />
                                    <label>Duración</label>
                                    <input type="time" class="form-control" name="Duracion" autocomplete="off" />

                                    <br />

                                    <label>Álbum</label>
                                    <input class="form-control" name="Album" autocomplete="off" placeholder="Ingrese nombre de la canción" minlength="3" />

                                    <br />
                                    <label>Artista</label>
                                    <input class="form-control" name="Artista" autocomplete="off" placeholder="Ingrese Género de la canción" minlength="3" />

                                    <br />


                                    <button class="btn btn-success">Subir</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
