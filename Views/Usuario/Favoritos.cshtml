                            <div class="col-md-12">
                                <h3>Favoritos</h3>
                            </div>

                            <div class="col-md-2">
                                <div class="album-poster2">
                                    <img src="~/Img/favoritos.jpg">
                                </div>
                                <h4>Total:@ViewBag.favoritos.Count</h4>
                           
                            </div>


                        </div>
                        <div class="der">
                            @{ int m = 0; }
                            <div class="container">

                                <audio id="audio" preload="none" tabindex="0">
                                    @foreach (var item in ViewBag.favoritos)
                                    {
                                        m++;
                                        <source src="@item.Canciones.LinkDeCancion" data-track-number="@m" />

                                    }
