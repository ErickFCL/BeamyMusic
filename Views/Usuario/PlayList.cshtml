    <div id="popup" class="overlay">
        <div id="popupBody">
            <h2>Subir Canción a Beamy Music</h2>
            <a id="cerrar" href="#">&times;</a>
            <div class="popupContent">

                @{ List<BeamyMusic.Models.PlayList> playLists = ((List<BeamyMusic.Models.PlayList>)ViewBag.playList); }



