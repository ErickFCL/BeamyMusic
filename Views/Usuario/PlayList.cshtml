                                <form action="/usuario/PlayList" enctype="multipart/form-data" method="post">
                                    <label>Nombre</label>
                                    <input class="form-control" name="Nombre" autocomplete="off" value="@Model.Nombre" />

                                    <br />

                                    <label>Estado</label>
